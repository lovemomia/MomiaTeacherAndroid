<?xml version="1.0" encoding="utf-8"?>
<com.youxing.sogoteacher.product.views.ProductDetailPartersView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/text_gray"
            android:layout_below="@id/title"
            android:text="16个孩子参加"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/parters"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"/>



</com.youxing.sogoteacher.product.views.ProductDetailPartersView>