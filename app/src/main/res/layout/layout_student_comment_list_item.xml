<?xml version="1.0" encoding="utf-8"?>
<com.youxing.sogoteacher.manager.views.StudentCommentListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_light_gray"
        android:text="12月20日"
        android:textSize="@dimen/text_medium"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_light_gray"
        android:layout_marginTop="8dp"
        android:text="小小飞行员"
        android:textSize="@dimen/text_medium"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_deep_gray"
        android:text="聪聪想象力丰富，思维敏捷，上课认真又积极。做完飞机模型，聪聪还问我可不可以拿回家给弟弟玩。"
        android:textSize="@dimen/text_large"/>

    <TextView
        android:id="@+id/teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="right"
        android:textColor="@color/text_light_gray"
        android:text="薇薇老师"
        android:textSize="@dimen/text_medium"/>

</com.youxing.sogoteacher.manager.views.StudentCommentListItem>