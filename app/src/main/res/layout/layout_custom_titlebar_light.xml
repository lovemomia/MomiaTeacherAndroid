<?xml version="1.0" encoding="utf-8"?>
<com.youxing.sogoteacher.views.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:id="@+id/titleBar"
    android:background="@color/white">
    <TextView
        android:id="@android:id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/text_large"
        android:textColor="@color/text_deep_gray"/>

    <com.youxing.sogoteacher.views.TitleBarButton
        android:id="@+id/title_left_btn"
        android:layout_height="match_parent"
        android:layout_width="50dp"
        android:layout_gravity="left|center_vertical"
        android:background="@drawable/bg_action_button_light">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/text_medium"
            android:layout_gravity="center"/>

    </com.youxing.sogoteacher.views.TitleBarButton>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <com.youxing.sogoteacher.views.TitleBarButton
            android:id="@+id/title_right_btn2"
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:layout_gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/bg_action_button_light">

            <ImageView
                android:id="@id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/text_medium"
                android:layout_gravity="center"/>

        </com.youxing.sogoteacher.views.TitleBarButton>

        <com.youxing.sogoteacher.views.TitleBarButton
            android:id="@+id/title_right_btn"
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:background="@drawable/bg_action_button_light">

            <ImageView
                android:id="@id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/text_medium"
                android:layout_gravity="center"/>

        </com.youxing.sogoteacher.views.TitleBarButton>
    </LinearLayout>


    <include layout="@layout/layout_divider"
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"/>
</com.youxing.sogoteacher.views.TitleBar>