<?xml version="1.0" encoding="utf-8"?>
<com.youxing.sogoteacher.mine.views.OrderPersonItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/ic_edit"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:textSize="@dimen/text_medium"
        android:text="xxxx"
        android:textColor="@color/text_deep_gray"/>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:textSize="@dimen/text_medium"
        android:text="xxxx"
        android:textColor="@color/text_deep_gray"/>

    <TextView
        android:id="@+id/sex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="30dp"
        android:textSize="@dimen/text_medium"
        android:text="xxxx"
        android:textColor="@color/text_deep_gray"/>

    <ImageView
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_select_gou"
        android:visibility="gone"/>

</com.youxing.sogoteacher.mine.views.OrderPersonItem>